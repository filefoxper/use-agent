{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": ".",
    "outDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
